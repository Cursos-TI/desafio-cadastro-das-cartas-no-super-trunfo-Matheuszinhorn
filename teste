#include <stdio.h>

int main () {
printf("Desafio Super Trunfo!\n");

// Carta 1
int populacao1;
float area1;
float pib1;
int pontos1;

//Carta 2
int populacao2;
float area2;
float pib2;
int pontos2;

   
//Entrada de Dados - Carta 1
printf("Carta 1\n");

printf("Digite a Populacao:");
scanf ("%d",&populacao1);

printf("Digite Área:");
scanf ("%f",&area1);

printf("Digite o Pib:");
scanf ( "%f",&pib1);

printf("Digite os Pontos:");
scanf ( " %d",&pontos1);

printf("\n");

//Entrada de Dados - Carta 2
printf("Carta 2\n");

printf("Digite a Populacao:");
scanf ("%d",&populacao2);

printf("Digite Área:");
scanf ("%f",&area2);

printf("Digite o Pib:");
scanf ( "%f",&pib2);

printf("Digite os Pontos:");
scanf ( " %d",&pontos2);

printf("\n");

// Exibição - Carta 1
    printf("=== Carta 1 ===\n");
    printf("População: %d\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Número de Pontos: %d\n", pontos1);

// Exibição - Carta 2
    printf("=== Carta 2 ===\n");
    printf("População: %d\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Número de Pontos: %d\n", pontos2);



return 0;
}
 